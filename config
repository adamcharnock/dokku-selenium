#!/usr/bin/env bash
export SELENIUM_IMAGE=${SELENIUM_IMAGE:="selenium/standalone-chrome"}
export SELENIUM_IMAGE_VERSION=${SELENIUM_IMAGE_VERSION:="2.53.0"}
export SELENIUM_ROOT=${SELENIUM_ROOT:="/var/lib/dokku/services/selenium"}

export PLUGIN_COMMAND_PREFIX="selenium"
export PLUGIN_DATA_ROOT=$SELENIUM_ROOT
export PLUGIN_DATASTORE_PORTS=(4444)
export PLUGIN_DEFAULT_ALIAS="SELENIUM"
export PLUGIN_ALT_ALIAS="DOKKU_SELENIUM"
export PLUGIN_IMAGE=$SELENIUM_IMAGE
export PLUGIN_IMAGE_VERSION=$SELENIUM_IMAGE_VERSION
export PLUGIN_SCHEME="http"
export PLUGIN_URL="/wd/hub"
export PLUGIN_SERVICE="Selenium"
export PLUGIN_BASE_PATH="$PLUGIN_PATH"
if [[ -n $DOKKU_API_VERSION ]]; then
  export PLUGIN_BASE_PATH="$PLUGIN_ENABLED_PATH"
fi

if [[ -d "$PLUGIN_DATA_ROOT/*" ]]; then
  rm -rf "${PLUGIN_DATA_ROOT:?}/*"
fi
